<%- model_class = Parent -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:full_name) %></th>
    <th><%= model_class.human_attribute_name(:primary_contract_person) %></th>
    <th><%= model_class.human_attribute_name(:phone_number) %></th>
    <th><%= model_class.human_attribute_name(:address) %></th>
    <th>Admitted on</th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @parents.each do |parent| %>
      <tr>
        <td><%= link_to parent.full_name, student_parent_path(@student ,parent) %></td>
        <td><%= parent.primary_contract_person %></td>
        <td><%= parent.phone_number %></td>
        <td><%= parent.address %></td>
        <td><%=l parent.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_student_parent_path(@student, parent), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      student_parent_path(@student, parent),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_student_parent_path,
            :class => 'btn btn-primary' %>

