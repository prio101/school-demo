<%= form_for @fee, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :currency, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :currency, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :school_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :school_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :batch_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :batch_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :classification_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :classification_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :course_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :course_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                fees_path, :class => 'btn' %>
  </div>
<% end %>
