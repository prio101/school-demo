<div class="span3">
  <div class="col-md-2 col-md-offset-5">
<%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email], class: 'span5' %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil ,class: 'span5'  %>
    </div>
    <div class="field">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me %>
    </div>
    <div class="actions"><%= submit_tag "Log in", class: 'btn' %></div>
<% end %>

</div>
</div>




