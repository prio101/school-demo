<%- model_class = StudentBalance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:msisdn) %></th>
      <th><%= model_class.human_attribute_name(:transaction_id) %></th>
      <th><%= model_class.human_attribute_name(:due) %></th>
      <th><%= model_class.human_attribute_name(:reference) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @student_balances.each do |student_balance| %>
      <tr>
        <td><%= link_to student_balance.id, student_student_balance_path(params[:student_id], student_balance) %></td>
        <td><%= student_balance.amount %></td>
        <td><%= student_balance.msisdn %></td>
        <td><%= student_balance.transaction_id %></td>
        <td><%= student_balance.due %></td>
        <td><%= student_balance.reference %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_student_student_balance_path(params[:student_id], student_balance), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      student_student_balance_path(params[:student_id], student_balance),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


    <%= paginate @student_balances, :theme => 'twitter-bootstrap' %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_student_student_balance_path(params[:student_id]),
            :class => 'btn btn-primary' %>
