<%= form_for [@student, @student_balance] ,:html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
<div class="control-group">
    <%= f.label :reference, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :reference, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                student_student_balances_path(@student.id), :class => 'btn' %>
  </div>
    <%= f.hidden_field :transaction_id, :value => "#{Time.now.to_i}_#{Random.rand(Time.now.to_i)}" %>
<% end %>


