<%- model_class = DefaulterSetting -%>
<div class="page-header">
  <h1>Class Year</h1>
</div>
<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:name) %></th>
    <th><%= model_class.human_attribute_name(:amount) %></th>
    <th><%= model_class.human_attribute_name(:created_at) %></th>
    <th><%=t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @defaulter_settings.each do |defaulter_setting| %>
      <tr>
        <td><%= link_to defaulter_setting.id, defaulter_setting_path(defaulter_setting) %></td>
        <td><%= defaulter_setting.name %></td>
        <td><%= defaulter_setting.amount %></td>
        <td><%=l defaulter_setting.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_defaulter_setting_path(defaulter_setting), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      defaulter_setting_path(defaulter_setting),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%
=begin
%>
<div class="row">
  <div class="span12">
    <%= paginate @defaulter_settings,  :theme => 'twitter-bootstrap' %>
  </div>
</div>
