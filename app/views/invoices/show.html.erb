<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fee_id) %>:</strong></dt>
  <dd><%= @invoice.fee_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:school_id) %>:</strong></dt>
  <dd><%= @invoice.school_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @invoice.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @invoice.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @invoice.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:voided_at) %>:</strong></dt>
  <dd><%= @invoice.voided_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paid_at) %>:</strong></dt>
  <dd><%= @invoice.paid_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:due_at) %>:</strong></dt>
  <dd><%= @invoice.due_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @invoice.course_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:batch_id) %>:</strong></dt>
  <dd><%= @invoice.batch_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @invoice.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_number) %>:</strong></dt>
  <dd><%= @invoice.invoice_number %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              invoices_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_invoice_path(@invoice), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              invoice_path(@invoice),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
