<%- model_class = CollectionSchedule -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fee_category_id) %>:</strong></dt>
  <dd><%= @collection_schedule.fee_category.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @collection_schedule.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payment_period) %>:</strong></dt>
  <dd><%= @collection_schedule.period %></dd>
  <dt><strong><%= model_class.human_attribute_name(:starting_time) %>:</strong></dt>
  <dd><%= @collection_schedule.starting_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ending_time) %>:</strong></dt>
  <dd><%= @collection_schedule.ending_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:create_due_invoice) %>:</strong></dt>
  <dd><%= @collection_schedule.create_due_invoice %></dd>
  <dt><strong><%= model_class.human_attribute_name(:due_date) %>:</strong></dt>
  <dd><%= @collection_schedule.due_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              collection_schedules_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_collection_schedule_path(@collection_schedule), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              collection_schedule_path(@collection_schedule),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
