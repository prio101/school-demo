<%- model_class = Batch -%>
<div class="page-header">
  <h1>Year/Term</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name("Defaulter Amount") %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @batches.each do |batch| %>
      <tr>
        <td><%= link_to batch.id, batch_path(batch) %></td>
        <td><%= batch.name %></td>
        <td><%= batch.defaulter_amount %></td>
        <td><%=l batch.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_batch_path(batch), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      batch_path(batch),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="span12">
    <%= paginate @batches,  :theme => 'twitter-bootstrap' %>
  </div>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_batch_path,
            :class => 'btn btn-primary' %>
