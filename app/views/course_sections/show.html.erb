<%- model_class = CourseSection -%>
<div class="page-header">
  <h1><%= @course_section.try(:section_name) %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:section_name) %>:</strong></dt>
  <dd><%= @course_section.section_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @course_section.course.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:batch_id) %>:</strong></dt>
  <dd><%= @course_section.batch.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              course_sections_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_course_section_path(@course_section), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              course_section_path(@course_section),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
