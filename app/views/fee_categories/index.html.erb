<%- model_class = FeeCategory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:fee) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fee_categories.each do |fee_category| %>
      <tr>
        <td><%= link_to fee_category.id, fee_category_path(fee_category) %></td>
        <td><%= fee_category.name %></td>
        <td><%= fee_category.fee %></td>
        <td><%=l fee_category.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_fee_category_path(fee_category), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      fee_category_path(fee_category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="row">
  <div class="span12">
    <%= paginate @fee_categories,  :theme => 'twitter-bootstrap' %>
  </div>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_fee_category_path,
            :class => 'btn btn-primary' %>
